import random

print("1부터 10까지의 숫자를 맞춰보세요!")
secret_number = random.randint(1, 10)

while True:
    guess = int(input("숫자를 입력하세요: "))
    if guess == secret_number:
        print("정답입니다!")
        break
    elif guess < secret_number:
        print("더 큰 숫자입니다.")
    else:
        print("더 작은 숫자입니다.")
